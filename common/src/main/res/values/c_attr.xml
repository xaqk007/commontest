<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomButton">
        <attr name="drawable_up" format="integer"/>
        <attr name="drawable_down" format="integer"/>
        <attr name="button_text" format="string"/>
        <attr name="button_textcolor" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomEditTextView">
        <attr name="errorColor" format="integer"/>
        <attr name="correctColor" format="integer"/>
        <attr name="cet_hint" format="string"/>
        <attr name="cet_textcolor" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomCheckBox">
        <attr name="ccb_drawableSize" format="dimension"/>
        <attr name="ccb_drawableLeft" format="reference"/>
        <attr name="ccb_drawableRight" format="reference"/>
        <attr name="ccb_drawableTop" format="reference"/>
        <attr name="ccb_drawableBottom" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomRadioButton">
        <attr name="crb_drawableSize" format="dimension"/>
        <attr name="crb_drawableTop" format="reference"/>
        <attr name="crb_drawableLeft" format="reference"/>
        <attr name="crb_drawableRight" format="reference"/>
        <attr name="crb_drawableBottom" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="drawableSizeTv" format="dimension" />
        <attr name="drawableTopTv" format="reference" />
        <attr name="drawableLeftTv" format="reference" />
        <attr name="drawableRightTv" format="reference" />
        <attr name="drawableBottomTv" format="reference" />
    </declare-styleable>
    <declare-styleable name="CustomInput">
        <attr name="input_layout_height" format="integer"/>
        <attr name="input_padding" format="integer"/>
        <attr name="input_icon" format="reference"/>
        <attr name="input_icon_size" format="dimension"/>
        <attr name="input_icon_error" format="reference"/>
        <attr name="input_text_size" format="dimension"/>
        <attr name="input_text_color" format="color"/>
        <attr name="input_text_color_hint" format="color"/>
        <attr name="error_text_size" format="dimension"/>
        <attr name="error_color" format="color"/>
        <attr name="input_hint" format="string"/>
        <attr name="ci_right_text" format="string"/>
        <attr name="ci_right_text_size" format="dimension"/>
        <attr name="ci_right_text_color" format="color"/>
        <attr name="ci_right_drawable" format="reference"/>
        <attr name="ci_right_drawable_size" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="TitleView">
        <attr name="title_text" format="string" />
        <attr name="title_text_size" format="dimension" />
        <attr name="title_text_color" format="color" />
        <attr name="back_drawable" format="reference" />
        <attr name="title_bg" format="color" />
    </declare-styleable>
    <declare-styleable name="TriangleView">
        <attr name="triangle_width" format="dimension"/>
        <attr name="triangle_height" format="dimension"/>
        <attr name="triangle_direction" format="string"/>
        <attr name="triangle_color" format="color"/>
    </declare-styleable>
</resources>